<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Profile</title>
  <!-- Bootstrap CSS for styling -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom stylesheet for profile page -->
  <link rel="stylesheet" href="/css/profile/profile.css">
</head>
<body class="bg-light">

<!-- Main container for the profile page -->
<div class="container mt-5">
  <div class="card shadow-lg p-4 rounded-4">
    <h2 class="mb-4 text-center">ðŸ‘¤ User Profile</h2>
    
    <!-- User info section (populated dynamically using JS) -->
    <p><strong>Username:</strong> <span id="username">Loading...</span></p>
    <p><strong>Email:</strong> <span id="email">Loading...</span></p>
    <p><strong>First Name:</strong> <span id="fname">Loading...</span></p>
    <p><strong>Last Name:</strong> <span id="lname">Loading...</span></p>

    <!-- Checkbox to enable/disable Two-Factor Authentication -->
    <div class="form-check mt-3">
      <input class="form-check-input" type="checkbox" id="otpCheckbox">
      <label class="form-check-label" for="otpCheckbox">
        Enable Two-Factor Authentication (OTP)
      </label>
    </div>

    <!-- Action buttons: open change password & change name modals -->
    <div class="d-flex gap-3 mt-4">
      <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
        Change Password
      </button>

      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#changeNameModal">
        Change Name
      </button>
    </div>
  </div>
</div>

<!-- Modal: Change Password -->
<div class="modal fade" id="changePasswordModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content rounded-4 shadow-lg">
      <div class="modal-header">
        <h5 class="modal-title">Change Password</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <!-- Change password form -->
      <form id="changePasswordForm">
        <div class="modal-body">
          <!-- Old password input -->
          <div class="mb-3">
            <label class="form-label">Old Password</label>
            <input type="password" name="oldPassword" class="form-control" required>
          </div>
          <!-- New password input -->
          <div class="mb-3">
            <label class="form-label">New Password</label>
            <input type="password" name="newPassword" class="form-control" required>
          </div>
          <!-- Confirm new password input -->
          <div class="mb-3">
            <label class="form-label">Confirm New Password</label>
            <input type="password" name="confirmPassword" class="form-control" required>
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-warning">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Modal: Change Name -->
<div class="modal fade" id="changeNameModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content rounded-4 shadow-lg">
      <div class="modal-header">
        <h5 class="modal-title">Change Name</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <!-- Change name form -->
      <form id="changeNameForm">
        <div class="modal-body">
          <!-- First name input -->
          <div class="mb-3">
            <label class="form-label">First Name</label>
            <input type="text" name="firstName" class="form-control" required>
          </div>
          <!-- Last name input -->
          <div class="mb-3">
            <label class="form-label">Last Name</label>
            <input type="text" name="lastName" class="form-control" required>
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Bootstrap JS bundle (for modal functionality) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<!-- External JS file that handles profile logic (fetch, update, OTP toggle) -->
<script src="/js/profile/profile.js"></script>

</body>
</html>
